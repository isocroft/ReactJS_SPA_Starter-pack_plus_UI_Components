{
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ],
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "checkJs": true,
        "noImplicitAny": false,
        "baseUrl": "src",
        "target": "es5",
        "downlevelIteration": true,
        "lib": ["es6", "esnext.asynciterable", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": false,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": ["node"],
        "typeRoots": [
            "./typings/react-busser-components.d.ts",
            "./node_modules/@types"
          ]
    }
}
